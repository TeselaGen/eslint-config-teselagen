{
  "extends": "teselagen/react",
  "rules": {
    "jsx-a11y/anchor-is-valid": "off",
    "react/no-this-in-sfc": "warn",
    "react-hooks/rules-of-hooks": "error",
    "prefer-const": [
      "warn",
      {
        "destructuring": "all"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".tsx", ".js", ".jsx", ".d.ts"]
      }
    }
  }
}
